@model Product

<div class="card shadow-sm p-4">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <textarea asp-for="ProductDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductCategory" class="control-label"></label>
                <input asp-for="ProductCategory" class="form-control" />
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductRating" class="control-label"></label>
                <input asp-for="ProductRating" class="form-control" type="number" step="0.1" min="0" max="5" />
                <span asp-validation-for="ProductRating" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductAvailableQuantity" class="control-label"></label>
                <input asp-for="ProductAvailableQuantity" class="form-control" type="number" min="0" />
                <span asp-validation-for="ProductAvailableQuantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductDiscount" class="control-label"></label>
                <input asp-for="ProductDiscount" class="form-control" type="number" step="0.01" min="0" max="100" />
                <span asp-validation-for="ProductDiscount" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>
